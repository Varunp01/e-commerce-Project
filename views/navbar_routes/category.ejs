<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h1><%= category %></h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let product of allproducts){ %>
            <div class="card cols">
                <img class="card-img-top" src="<%= product.image.url %>" alt="Card image cap" style="height: 16rem;">
                <div class="card-body">
                    <h5 class="card-title"><a href="/products/<%= product.id %>">
                            <%=product.title%>
                        </a></h5>
                    <p class="card-text">
                        <%=product.description%>
                    </p>
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
            <!-- <li><a href="/products/<%= product.id %>"><%=product.title%></li></a> -->
            <% } %>
        </div></body>
